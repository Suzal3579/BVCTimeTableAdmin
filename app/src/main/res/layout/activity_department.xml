<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_department"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.pramesh.bvctimetableadmin.Department">

    <Button
        android:text="ECE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mechButton"
        android:layout_alignStart="@+id/cseButton"
        android:background="@drawable/shapebutton"
        android:textColor="@color/white"
        android:layout_marginTop="23dp"
        android:id="@+id/eceButton" />

    <Button
        android:text="EEE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eceButton"
        android:layout_alignEnd="@+id/civilButton"
        android:background="@drawable/shapebutton"
        android:textColor="@color/white"
        android:layout_marginTop="26dp"
        android:id="@+id/eeeButton" />

    <Button
        android:text="Mech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mechButton"
        android:layout_centerVertical="true"
        android:background="@drawable/shapebutton"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <Button
        android:text="CSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cseButton"
        android:background="@drawable/shapebutton"
        android:textColor="@color/white"
        android:layout_above="@+id/mechButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Civil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/civilButton"
        android:background="@drawable/shapebutton"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/cseButton"
        android:layout_toStartOf="@+id/cseButton" />
</RelativeLayout>
